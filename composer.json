{
    "name": "bag2/monkey-patcher",
    "description": "Runtime monkey patching (open classes) for PHP via PHP-Parser and uopz when available",
    "license": "Apache-2.0",
    "require": {
        "php": "^8.0 || ^7.4",
        "nikic/php-parser": "^5.0 || ^4.0"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.8",
        "phpstan/phpstan": "^2.1.32"
    },
    "autoload": {
        "psr-4": {
            "Bag2\\MonkeyPatcher\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bag2\\MonkeyPatcher\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": ["@composer bin phpunit install --ansi"]
    },
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true
        },
        "sort-packages": true
    },
    "extra": {
        "bamarni-bin": {
            "bin-links": true,
            "target-directory": "vendor-bin",
            "forward-command": true
        }
    }
}
